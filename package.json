	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/OzymandiasTheGreat/sodium-universal.git"
	},
	"main": "src/index.js",
	"scripts": {
		"dev": "node-gyp rebuild",
		"fetch-libsodium": "node deps/bin.js --fetch --no-build",
		"test": "tape \"test/*.js\"",
		"install": "node-gyp-build",
